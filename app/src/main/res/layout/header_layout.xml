<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UselessParent">


       <RelativeLayout
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:background="@drawable/circle_withoutbg"
           android:gravity="center"
           android:layout_marginTop="5dp"
           android:layout_marginStart="5dp">
           <ImageView
               android:id="@+id/cv_vehicleimage"
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:src="@drawable/logo"
               android:layout_gravity="center"
               android:scaleType="centerInside"
               tools:ignore="ContentDescription" />
       </RelativeLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp">
            <TextView
                android:textColor="@color/myvacalablack"
                android:textSize="14sp"
                android:id="@+id/txt_vehiclename"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text=" "
                android:fontFamily="@font/axiforma_semibold"
                tools:ignore="HardcodedText"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_gravity="center"
                android:padding="5dp"/>

                <Button
                    android:layout_marginStart="5dp"
                    android:padding="5dp"
                    android:id="@+id/btn_vehiclefueltype"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:fontFamily="@font/axiforma_semibold"
                    android:text="Disel"
                    android:textAlignment="center"
                    android:textSize="8sp"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:background="@drawable/grey_color_shape"
                    android:textColor="@color/white"/>









        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_gravity="end">


            <Button
                android:layout_toStartOf="@+id/ll_city"
                android:layout_marginTop="15dp"
                android:id="@+id/btnnotifications"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/notifications"
                android:layout_marginEnd="10dp"
                android:padding="10dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/capsule_bg"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:id="@+id/ll_city"
                android:gravity="end">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:id="@+id/button1button"
                    android:background="@drawable/ic_baseline_location_on_24"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="start"/>
                <TextView
                    android:id="@+id/txt_location"
                    android:layout_marginStart="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="60dp"
                    android:text="Chennai"
                    android:fontFamily="@font/axiforma_semibold"
                    android:textColor="@color/myvacalablack"
                    android:gravity="center_horizontal"
                    android:textSize="10sp"
                    android:drawablePadding="3dp"
                    tools:ignore="HardcodedText"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_gravity="center" />
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:id="@+id/button2button"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/ic_baseline_keyboard_arrow_down_24"
                    android:layout_gravity="end"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txt_address"
                android:layout_below="@+id/ll_city"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="address dafads d dagdg xfzhfdshajhnfd "
                android:textSize="8sp"
                android:fontFamily="@font/axiforma_semibold"
                android:textColor="@color/dark_gray"
                android:layout_marginTop="5dp"
                tools:ignore="HardcodedText"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginEnd="10dp"/>




        </RelativeLayout>











    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/whiteFive"
        android:layout_marginTop="8dp"/>



</LinearLayout>