<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Lightgray">

    <LinearLayout
        android:id="@+id/headerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UselessParent">


            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circle_withoutbg"
                android:gravity="center">

                <ImageView
                    android:id="@+id/cv_vehicleimage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/logo"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_vehiclename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/axiforma_semibold"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text="vehiclename"
                    android:textColor="@color/myvacalablack"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_vehiclefueltype"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/button_rectangle_corner"
                        android:fontFamily="@font/axiforma_semibold"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/fueltype"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:visibility="gone"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:id="@+id/txt_vehicle_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/axiforma_semibold"
                        android:maxLines="1"
                        android:text="@string/vehicle_number"
                        android:textColor="@color/myvacalablack"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/whiteFive" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollablContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footerView"
        android:layout_below="@+id/headerView"
        android:layout_marginBottom="20dp"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Lightgray"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corner">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/parking_bg" />

                <ImageView
                    android:id="@+id/img_header_back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/ic_backarrow_blackrounded" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="160dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_parking_name"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/axiforma_semibold"
                        android:maxLines="1"
                        android:text="Parking Options"
                        android:textColor="@color/white"
                        android:textSize="18sp" />


                    <RelativeLayout
                        android:id="@+id/rlshare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:gravity="end">

                        <LinearLayout
                            android:id="@+id/ll_share"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            tools:ignore="UselessParent">


                            <ImageView
                                android:id="@+id/img_share"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_share_white" />

                            <TextView
                                android:id="@+id/btn_availabele"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/img_share"
                                android:fontFamily="@font/axiforma_semibold"
                                android:padding="5dp"
                                android:text="@string/share_location"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                tools:ignore="SmallSp" />
                        </LinearLayout>


                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="220dp"
                    android:background="@drawable/layout_bg_round">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:id="@+id/lladdressdetails"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginEnd="10dp"
                                        android:orientation="horizontal"
                                        tools:ignore="UselessParent">

                                        <ImageView
                                            android:id="@+id/button1button"
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:scaleType="centerInside"
                                            android:src="@drawable/ic_baseline_location_on_24"
                                            tools:ignore="ContentDescription" />

                                        <TextView
                                            android:id="@+id/txt_address"
                                            android:layout_width="190dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginEnd="5dp"
                                            android:layout_weight="0.75"
                                            android:ellipsize="end"
                                            android:fontFamily="@font/axiforma_semibold"
                                            android:maxLines="2"
                                            android:text="@string/addr_dummy"
                                            android:textColor="@color/dark_gray"
                                            android:textSize="10sp"
                                            tools:ignore="HardcodedText" />

                                        <ImageView
                                            android:id="@+id/button1button3"
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:scaleType="centerInside"
                                            android:src="@drawable/ic_currentlocation"
                                            tools:ignore="ContentDescription" />


                                    </LinearLayout>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="15dp"
                                    android:layout_weight="2"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/axiforma_semibold"
                                        android:text="Slots"
                                        android:textColor="@color/myvacalabutton" />

                                    <Button
                                        android:id="@+id/btn_parking_slots_count"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="5dp"
                                        android:background="@drawable/button_rectangle_corner"
                                        android:fontFamily="@font/axiforma_semibold"
                                        android:gravity="center"
                                        android:minHeight="20dp"
                                        android:padding="5dp"
                                        android:text="available"
                                        android:textAlignment="center"
                                        android:textAllCaps="false"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        tools:ignore="SmallSp" />

                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:orientation="horizontal"
                                tools:ignore="UseCompoundDrawables">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/ic_speed" />

                                <TextView
                                    android:id="@+id/txt_distance_reachtime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/axiforma_semibold"
                                    android:text="2.3mins/3.3 mins"
                                    android:textColor="@color/myvacalabutton"
                                    android:textSize="12sp" />
                            </LinearLayout>


                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/axiforma_semibold"
                            android:text="Booking Window"
                            android:textColor="@color/cal_grey_txt_title"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@color/myvacalagray"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_bookingdateandtime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="20dp"
                                android:ellipsize="end"
                                android:fontFamily="@font/axiforma_semibold"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="Booking date and time"
                                android:textColor="@color/cal_grey_txt_title"
                                android:textSize="14sp" />

                            <RelativeLayout
                                android:id="@+id/rlchangedateandtime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="20dp"
                                android:gravity="end">

                                <ImageView
                                    android:id="@+id/img_changedateandtime"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="10dp"
                                    android:background="@drawable/changedatetime" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:layout_below="@+id/img_changedateandtime"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerInParent="false"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/axiforma_semibold"
                                    android:text="Change"
                                    android:textAlignment="center"
                                    android:textColor="@color/cal_grey_txt_title"
                                    android:textSize="12sp"
                                    tools:ignore="SmallSp" />


                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>


            </RelativeLayout>

            <ir.beigirad.zigzagview.ZigzagView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:zigzagBackgroundColor="#ffffff"
                app:zigzagHeight="5dp"
                app:zigzagShadowAlpha="0.9"
                app:zigzagSides="bottom">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/axiforma_semibold"
                                android:text="@string/rate_card"
                                android:textColor="@color/cal_grey_txt_title"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/button1button2"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_baseline_info_24"
                                tools:ignore="ContentDescription" />

                        </LinearLayout>


                        <TextView
                            android:id="@+id/txt_operating_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/axiforma_medium"
                            android:text="@string/operating_time_5_00am_to_6_00pm"
                            android:textColor="@color/myvacalablack"
                            android:textSize="14sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </ir.beigirad.zigzagview.ZigzagView>

            <ir.beigirad.zigzagview.ZigzagView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:zigzagBackgroundColor="#ffffff"
                app:zigzagHeight="5dp"
                app:zigzagShadowAlpha="0.9"
                app:zigzagSides="bottom">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/axiforma_semibold"
                            android:text="Bill Details"
                            android:textColor="@color/cal_grey_txt_title"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:id="@+id/ll_noofhours"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.75"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txt_noofhourscou"
                                    android:layout_width="130dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:fontFamily="@font/axiforma_medium"
                                    android:text="No. of Hours #1"
                                    android:textColor="@color/myvacalablack"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/txt_hourscountrate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_weight="0.25"
                                android:fontFamily="@font/axiforma_medium"
                                android:text="15"
                                android:textAlignment="center"
                                android:textColor="@color/myvacalablack"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/ll_dayscount"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.75"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txt_dayscount"
                                    android:layout_width="130dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:fontFamily="@font/axiforma_medium"
                                    android:text="No. of Days #1   "
                                    android:textColor="@color/myvacalablack"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/txt_dayscountrate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_weight="0.25"
                                android:fontFamily="@font/axiforma_medium"
                                android:text="10"
                                android:textAlignment="center"
                                android:textColor="@color/myvacalablack"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_noofmonths"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.75"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txt_monthscount"
                                    android:layout_width="130dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:fontFamily="@font/axiforma_medium"
                                    android:text="No. of Months #1"
                                    android:textColor="@color/myvacalablack"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/txt_monthscountrate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_weight="0.25"
                                android:fontFamily="@font/axiforma_medium"
                                android:text="15"
                                android:textAlignment="center"
                                android:textColor="@color/myvacalablack"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <View
                            android:id="@+id/view2"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="20dp"
                            android:background="@color/Lightgray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="20dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-medium"
                                    android:text="Total Bill Value"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/txt_total"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-medium"
                                    android:gravity="end"
                                    android:text="@string/rupees"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-medium"
                                    android:text="Discount"
                                    android:textColor="@color/myvacalablack"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/txt_discount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-medium"
                                    android:gravity="end"
                                    android:text="@string/rupees"
                                    android:textColor="@color/green"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/rectangle_corner"
                                android:orientation="horizontal"
                                android:padding="10dp">

                                <EditText
                                    android:id="@+id/edt_coupon"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="10dp"
                                    android:layout_weight="0.75"
                                    android:background="@null"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/axiforma_semibold"
                                    android:hint="Promo Coupon"
                                    android:imeOptions="actionDone"
                                    android:singleLine="true"
                                    android:textColor="@color/myvacalablack"
                                    android:textSize="14sp"
                                    tools:ignore="Autofill,TextFields" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:layout_weight="0.25"
                                    android:gravity="end">

                                    <ImageView
                                        android:id="@+id/button1button4"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_marginStart="10dp"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/ic_baseline_info_24"
                                        tools:ignore="ContentDescription" />

                                    <Button
                                        android:id="@+id/btn_apply"
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"
                                        android:layout_marginStart="5dp"
                                        android:layout_toEndOf="@id/button1button4"
                                        android:background="@drawable/button_rectangle_corner_gray"
                                        android:text="@string/apply"
                                        android:textAllCaps="false"
                                        android:textColor="@color/white"
                                        android:textSize="12sp" />


                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-medium"
                                    android:text="Total Payable"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/txt_to_pay"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
